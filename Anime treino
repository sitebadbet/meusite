  <h1>Treino Animes Point Punch</h1>

  <div class="section active" id="paginaInicial">
    <div class="descricao">
      Ferramenta sem fins lucrativos criada por <strong>Wellington Silva</strong> (Bad Hip Hop) para ajudar MCs a treinar suas rimas e realizar seus sonhos.<br>
      Siga: <strong>@bad.hiphop</strong> | Desenvolvido por: <strong>@point.punch</strong><br>
      Use para evoluir nas batalhas e alcan√ßar o sucesso!
    </div>
    <button onclick="mudarSecao('paginaNivel')">Come√ßar Treino</button>
  </div>

  <div class="section" id="paginaNivel">
    <h2>Escolha o N√≠vel do MC</h2>
    <select id="nivel">
      <option value="amador">Amador</option>
      <option value="profissional">Profissional</option>
      <option value="lendario">Lend√°rio</option>
    </select>
    <br>
    <button onclick="mudarSecao('paginaTreino')">Iniciar Treino</button>
  </div>

  <div class="section" id="paginaTreino">
    <h2>Treino de Freestyle: ANIME</h2>

    <div id="cronometro"></div>
    <div id="word"></div>

    <div class="botoes-treino">
      <button onclick="iniciarTreino()">‚ñ∂Ô∏è Play</button>
      <button onclick="reiniciarTreino()">üîÅ Reiniciar</button>
      <button onclick="reiniciarPrograma()">üîô Voltar</button>
    </div>
  </div>

  <script>
    const secoes = document.querySelectorAll('.section');
    const cronometro = document.getElementById('cronometro');
    const word = document.getElementById('word');
    let intervalo;
    let tempoRestante = 10;
    let tempoNivel = 10;

    const palavrasAnime = {
      amador: ['Naruto', 'Goku', 'Vegeta', 'Sasuke', 'Luffy', 'Zoro', 'Yusuke', 'Kurama', 'Koenma', 'Athena', 'Chap√©u de Palha', 'Kira', 'chakra', 'kunai', 'shuriken', 'miss√£o', 'sensei', 'pirata', 'capit√£o', 'mar', 'aventura', 'esp√≠rito', 'batalha', 'detetive espiritual', 'Pikachu', 'pok√©bola', 'batalha', 'treinador', 'gin√°sio', 'tipo', 'Eevee', 'Ash', 'Brock', 'Misty'],
      profissional: ['Rasengan', 'Sharingan', 'Super Saiyajin', 'Akuma no Mi', 'Grand Line', 'Cosmo', 'Cavaleiro de Ouro', 'Makai', 'Shinigami', 'Caderno da Morte', 'Bijuu', 'Senin', 'Hatake', 'cl√£', 'honra', 'destino', 'poder', 'amizade', 'for√ßa', 'energia', 'esfera', 'Shenlong', 'investiga√ß√£o', 'crime', 'mentira', 'pirata', 'capit√£o', 'aventura', 'luta', 'coragem', 'Makankosappo', 'Dende', 'Videl', 't√©cnica secreta', 'golpe espiritual', 'dem√¥nio', 'sacrif√≠cio', 's√©timo sentido', 'justiceiro', 'rosa sangrenta', 'evolu√ß√£o', 'Z-Move', 'Dynamax'],
      lendario: ['Mangekyou', 'Zanpakuto', 'Susanoo', 'Exclama√ß√£o de Atena', 'Genki Dama', 'Kaio-Ken', 'Leigan', 'F√™nix', 'Regra do Death Note', 'Rinnegan', 'Madara', 'Obito', 'Itachi', 'Nagato', 'Pain', 'rinne tensei', 'cl√£ Hyuuga', 'cl√£ Senju', 'bijuu dama', 'ten tails', 'Kakarotto', 'Final Flash', 'Gogeta', 'Vegito', 'Jiren', 'Torneio do Poder', 'Zen‚Äôoh', 'Granolah', 'Red Ribbon', 'deus do novo mundo', 'manipula√ß√£o mental', 'armadilha', 'Gol D. Roger', 'haki do rei', 'Kaido', 'Big Mom', 'Barba Branca', 'Vegapunk', 'Shichibukai', 'Toguro', 'Sensui', 'drag√£o negro', 'portais', 'arena', 'rebeli√£o', 'Doze casas', 'Cavaleiros de Ouro', 'Hades', 'Poseidon', 'Excalibur', 'cosmos infinito', 'Athena Exclamation', 'Ligas', 'Elite dos Quatro', 'mega evolu√ß√£o', 'regi√£o de Kanto', 'Paldea']
    };

    function mudarSecao(id) {
      secoes.forEach(secao => secao.classList.remove('active'));
      document.getElementById(id).classList.add('active');
      clearInterval(intervalo);
      cronometro.textContent = '';
      word.textContent = '';
    }

    function iniciarTreino() {
      clearInterval(intervalo);
      word.textContent = '';
      cronometro.textContent = '';

      const nivel = document.getElementById('nivel').value;
      const palavras = palavrasAnime[nivel];

      if (nivel === 'amador') tempoNivel = 15;
      else if (nivel === 'profissional') tempoNivel = 10;
      else if (nivel === 'lendario') tempoNivel = 5;

      let contaRegressiva = 3;
      const contar = setInterval(() => {
        word.textContent = contaRegressiva;
        contaRegressiva--;
        if (contaRegressiva < 0) {
          clearInterval(contar);
          word.textContent = 'Rima!';
          setTimeout(() => iniciarLoop(palavras), 1000);
        }
      }, 1000);
    }

    function iniciarLoop(palavras) {
      tempoRestante = tempoNivel;
      atualizarCronometro();

      const exibirPalavra = () => {
        const indice = Math.floor(Math.random() * palavras.length);
        word.textContent = palavras[indice];
        tempoRestante = tempoNivel;
      };

      exibirPalavra();

      intervalo = setInterval(() => {
        tempoRestante--;
        atualizarCronometro();
        if (tempoRestante <= 0) exibirPalavra();
      }, 1000);
    }

    function atualizarCronometro() {
      cronometro.textContent = `Tempo restante: ${tempoRestante}s`;
    }

    function reiniciarTreino() {
      iniciarTreino();
    }

    function reiniciarPrograma() {
      clearInterval(intervalo);
      word.textContent = '';
      cronometro.textContent = '';
      tempoRestante = 0;
      document.getElementById('nivel').value = 'amador';
      mudarSecao('paginaInicial');
    }
  </script>

